{
    "name": "bapcltd/behat-code-coverage",
    "description": "Generate Code Coverage reports for Behat tests",
    "type": "library",
    "homepage": "https://github.com/bapcltd-marv/behat-code-coverage",
    "keywords": [
        "behat", "code", "coverage", "generate", "generation", "build",
        "report", "test", "tests", "code-coverage", "reports", "clover",
        "scenario", "bdd"
    ],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Doug Wright",
            "role": "Developer"
        },
        {
            "name": "ek9",
            "email": "dev@ek9.co",
            "homepage": "https://ek9.co"
        },
        {
            "name": "Anthon Pang",
            "email": "apang@softwaredevelopment.ca"
        }
    ],
    "require": {
        "php": "^7.4",
        "behat/behat": "^3.5",
        "phpunit/php-code-coverage": "^7|^8",
        "symfony/config": "^4|^5",
        "symfony/console": "^4|^5",
        "symfony/dependency-injection": "^4|^5",
        "symfony/event-dispatcher": "^4|^5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpcov": "dev-master",
        "phpunit/phpunit": "^8|^9",
        "roave/security-advisories": "dev-master"
    },
    "suggest": {
        "ext-xdebug": "Xdebug extension is required to collect coverage via Xdebug driver and run tests",
        "ext-phpdbg": "PHPDBG extension allows you to collect coverage faster than Xdebug"
    },
    "conflict": {
        "leanphp/behat-code-coverage": "*",
        "dvdoug/behat-code-coverage": "*"
    },
    "autoload": {
        "psr-4": {
            "DVDoug\\Behat\\CodeCoverage\\": "src/"
        },
        "files": ["src/LeanPHP.php"]
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-compat" : "full",
        "optimize-autoloader": true
    }
}
